{% extends "GSPBundle:Default:menu.html.twig" %}
{% block title %}Gestion des Zones{% endblock %}
{% block contentHeader %}{% endblock %}
{% block content %}
    <h1>Creation de zone</h1>
    <div class="box box-primary">
		<div class="box-header with-border">
			<h1 class="box-title">Ajout de Nouvelle Zone</h1>
			<div class="box-tools pull-right">
				<button class="btn btn-box-tool" data-widget="collapse">
					<i class="fa fa-minus"></i>
				</button>
			</div>
		</div>
		{{ form_start(form) }}
		<div class="box-body">
			<div class="form-group">
			
			{{ form_errors( form.libelle) }}
				<div class="col-sm-20">
				{{ form_label(form.libelle) }}
				{{ form_widget(form.libelle,{'attr':{'class':"form-control"}}) }}
				</div>
			</div>
                                <div class="form-group">
			
			{{ form_errors( form.projetZone) }}
				<div class="col-sm-20">
				{{ form_label( form.projetZone) }}
				{{ form_widget( form.projetZone,{'attr':{'class':"form-control"}}) }}
				</div>
			</div>
		</div>
		<div class="box-footer">
		<a href="{{ path('zone') }}"><button type="button" class="btn btn-warning">Retour</button></a>
		{{ form_widget( form.submit, {'attr':{'class':"pull-right btn btn-primary"}}) }}
		<input type="reset" value="Annuler" class="btn btn-default pull-right" /> 
		
		</div>
		{{ form_end( form) }}
	</div>
{% endblock %}
