<div class="panel panel-primary openchat" style="display: none">
		<div class="panel-heading">
			<h3 class="panel-title">
                            <div class="row" id="entete">
                                <div class="col-xs-8 container-fluid">
                                    <div class="btn-group pull-left">
                                        <button id="btnd" onclick="showListeD();" type="button" class="btn btn-default">
                                            Discussions
                                        </button>
                                        <button id="btnconnected" onclick="showListeConnected();" type="button" class="btn btn-primary" data-toggle="bottom" title="Afficher les contacts connectés">
                                            <span class="glyphicon glyphicon-link"> </span>
                                        </button>
                                        <button id="btnc" onclick="showListeC();" type="button" class="btn btn-primary">
                                            Contacts
                                        </button>
                                    </div>                                    
        			</div>
			        <div class="col-xs-4 container-fluid">
                                    <div class="row" id="menu_contacts" style="display: none">
                                        <div class="btn-group pull-right">
                                            <button onclick="actualiserLIsteContacts();" type="button" class="btn btn-default" data-toggle="bottom" title="Actualiser la liste des contacts">
                                                <span class="glyphicon glyphicon-refresh"></span>
                                            </button>
                                            <button onclick="openChat();" type="button" class="btn btn-danger" data-toggle="bottom" title="Cacher">
                                                <span class="glyphicon glyphicon-remove-sign"></span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="row" id="menu_connected" style="display: none">
                                        <div class="btn-group pull-right">
                                            <button onclick="openChat();" type="button" class="btn btn-danger" data-toggle="bottom" title="Cacher">
                                                <span class="glyphicon glyphicon-remove-sign"></span>
                                            </button>
                                        </div>
                                    </div>
                                    <div class="row" id="menu_discussions">
            				<div class="btn-group pull-right">
                                            <button onclick="actualiserLIsteDiscussions();" type="button" class="btn btn-default" data-toggle="bottom" title="Actualiser la liste des discussions">
						<span class="glyphicon glyphicon-refresh"></span>
                                            </button>
                                            <button onclick="afficherFormNouvelleDiscussion();" type="button" class="btn btn-default" data-toggle="bottom" title="Créer une nouvelle discussion">
						<span class="glyphicon glyphicon-plus"></span>
                                            </button>
                                            <button onclick="openChat();" type="button" class="btn btn-danger" data-toggle="bottom" title="Cacher">
                                                <span class="glyphicon glyphicon-remove-sign"></span>
                                            </button>
					</div>
                                    </div>                                    
        			</div>
                            </div>
                            <div class="row-fluid">
                                <input id="searchtext" name="searchtext" type="text" style="width: 100%; color: #761c19; font-size: small" placeholder="Recherche . . ."/>
                            </div>
			</h3>
		</div>
		<div class="panel-body">
			<div class="row">
                            <div class="tabbable">
                                <div class="tab-content" style="overflow-y: scroll; height: 400px">
                                    <div class="tab-pane active" id="discussions-tab-pane">
                                        <div class="container-fluid" id="les_discussions">
                                            Discussions
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="contacts-tab-pane">
                                        <div class="container-fluid" id="les_contacts">
                                            Contacts                        
                                        </div>
                                    </div>
                                    <div class="tab-pane" id="connected-tab-pane">
                                        <div class="container-fluid" id="les_connected">
                                            Connectés                       
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
		</div>
            </div>

<script type="text/javascript">
    
    $(function(){
       $('#searchtext').keyup(function( event ) {
           var text = $('#searchtext').val().toLowerCase();
           if(text != "")
                $("#les_contacts div").each(function(index){
                    if($(this).find("p").text().toLowerCase().includes(text)) $(this).show();
                    else $(this).hide();
                });
           else
               $("#les_contacts div").each(function(index){
                    $(this).show();
                });
       }) 
    });
    
    $(function(){
       $('#searchtext').keyup(function( event ) {
           var text = $('#searchtext').val().toLowerCase();
           if(text != "")
                $("#les_discussions div").each(function(index){
                    if($(this).find(".titre").text().toLowerCase().includes(text) ||
                            $(this).find(".sujet").text().toLowerCase().includes(text) ||
                            $(this).find(".np").text().toLowerCase().includes(text)) $(this).show();
                    else $(this).hide();
                });
           else
               $("#les_discussions div").each(function(index){
                    $(this).show();
                });
       }) 
    });
    
    $(function(){
       $('#searchtext').keyup(function( event ) {
           var text = $('#searchtext').val().toLowerCase();
           if(text != "")
                $("#les_connected div").each(function(index){
                    if($(this).find("p").text().toLowerCase().includes(text) && 
                            $(this).is(":visible")) $(this).show();
                    else $(this).hide();
                });
           else
               getConnectedUsers();
       }) 
    });
    
</script>